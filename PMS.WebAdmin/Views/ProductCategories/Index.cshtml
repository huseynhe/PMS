@model List<ProductCategoryDto>
@{
    ViewData["Title"] = "Index";
}

<div class="layout-px-spacing">

    <div class="row layout-top-spacing">

        <div id="tableProgress" class="col-lg-12 col-12 layout-spacing">
            <div class="statbox widget box box-shadow">
                <div class="widget-header">
                    <div class="row">

                        <div class="col-6">
                            <h2 class="text-primary">
                                Kateqoriya siyahısı
                            </h2>
                        </div>
                        <div class="col-6 text-right">
                            <a asp-controller="ProductCategories" asp-action="Create" class="btn btn-primary">
                                <i class="bi bi-plus-circle"></i>&nbsp; Yeni kateqoriya yarad
                            </a>
                        </div>

                        @*<div class="col-xl-12 col-md-12 col-sm-12 col-12">
                                <h4>Progress Table</h4>
                            </div>*@
                    </div>
                </div>
                <div class="widget-content widget-content-area">
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th class="text-center">#</th>
                                    <th>Ad</th>
                                    <th>Açıqlama</th>
                                    <th class="text-center">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    foreach (var item in Model)
                                    {
                                        <tr>
                                            <td class="text-center">1</td>
                                            <td>@item.Name</td>

                                            <td><p class="text-danger">@item.Description</p></td>
                                            <td class="text-center">
                                                <div class="w-75 btn-group" role="group">
                                                    <a asp-controller="ProductCategories" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary mx-2">

                                                        <i class="bi bi-pencil-square"></i> Edit
                                                    </a>
                                                    <a asp-controller="ProductCategories" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-warning mx-2">

                                                        <i class="bi bi-trash"></i>Delete
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }

                                }


                            </tbody>
                        </table>
                    </div>


                </div>
            </div>
        </div>



    </div>


</div>

